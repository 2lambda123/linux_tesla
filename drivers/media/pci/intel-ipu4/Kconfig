config VIDEO_INTEL_IPU4
	tristate "Intel intel-ipu4 driver"
	select IOMMU_API
	select IOMMU_IOVA
	select X86_DEV_DMA_OPS if X86
	select VIDEOBUF2_DMA_CONTIG
	select PHYS_ADDR_T_64BIT
	select COMMON_CLK
	---help---
	Say Y here!

choice
       prompt "intel-ipu4 hardware stepping"
       depends on VIDEO_INTEL_IPU4
       default VIDEO_INTEL_IPU4_A0

config VIDEO_INTEL_IPU4_A0
       bool "Compile for ipu4 A0"

config VIDEO_INTEL_IPU4_B0
       bool "Compile for ipu4 B0"
endchoice

choice
       prompt "intel-ipu4 hardware type"
       depends on VIDEO_INTEL_IPU4
       default VIDEO_INTEL_IPU4_SOC

config VIDEO_INTEL_IPU4_SOC
       bool "Compile for SOC"

config VIDEO_INTEL_IPU4_FPGA
       bool "Compile for FPGA"
endchoice

config VIDEO_INTEL_IPU4_DEBUG
	tristate "User space interface for firmware testing"
	depends on VIDEO_INTEL_IPU4

config VIDEO_INTEL_IPU4_ISYS
	bool "Input system"
	depends on VIDEO_INTEL_IPU4
	depends on VIDEO_V4L2
	---help---
	FPGA based input system. Select if your FPGA based environment
	contains an input system.

config VIDEO_INTEL_IPU4_PSYS
	bool "Processing system"
	depends on VIDEO_INTEL_IPU4
	---help---
	FPGA based processing system. Select if your FPGA based
	environment contains a processing system.
